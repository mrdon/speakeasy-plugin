    <build>
        <plugins>
            <plugin>
                <groupId>com.atlassian.maven.plugins</groupId>
                <artifactId>maven-refapp-plugin</artifactId>
                <version>3.3-m8</version>
                <extensions>true</extensions>
                <configuration>
                    <skipManifestValidation>true</skipManifestValidation>
                    <compressResources>false</compressResources>
                    <systemPropertyVariables>
                        <xvfb.enable>${xvfb.enable}</xvfb.enable>
                        <webdriver.browser>firefox-3.6</webdriver.browser>
                        <atlassian.mail.senddisabled>false</atlassian.mail.senddisabled>
                        <!--atlassian.dev.mode>false</atlassian.dev.mode-->
                    </systemPropertyVariables>
                    <instructions>
                        <Import-Package>
                            com.atlassian.confluence.plugin.descriptor.web.descriptors;resolution:=optional,
                            com.atlassian.confluence.plugin.webresource;resolution:=optional,
                            com.atlassian.jira.plugin.webfragment.descriptors;resolution:=optional,
                            com.atlassian.jira.security;resolution:=optional,
                            com.atlassian.jira;resolution:=optional,
                            com.atlassian.plugins.rest.common.security,
                            com.atlassian.sal.api.*;version="(2.4,3.0]",
                            *;resolution:=optional
                        </Import-Package>
                        <Export-Package>
                            com.atlassian.labs.speakeasy.install.convention.external,
                            com.atlassian.labs.speakeasy.manager.convention.external
                        </Export-Package>
                    </instructions>
                    <products>
                        <product>
                            <id>refapp</id>
                            <version>${platform.version}</version>
                            <log4jProperties>src/test/resources/log4j.properties</log4jProperties>
                            <libArtifacts>
                                <libArtifact>
                                    <groupId>org.apache.commons</groupId>
                                    <artifactId>commons-email</artifactId>
                                    <version>1.2</version>
                                </libArtifact>
                                <libArtifact>
                                    <groupId>javax.mail</groupId>
                                    <artifactId>mail</artifactId>
                                    <version>1.4.1</version>
                                </libArtifact>
                            </libArtifacts>
                        </product>
                        <product>
                            <id>confluence</id>
                            <version>${confluence.version}</version>
                            <dataVersion>${confluence.data.version}</dataVersion>
                            <productDataPath>${basedir}/src/test/resources/confluence-generated-test-resources.zip
                            </productDataPath>
                        </product>
                        <product>
                            <instanceId>confluence-4.0</instanceId>
                            <id>confluence</id>
                            <version>${confluence.4.0.version}</version>
                            <dataVersion>${confluence.data.version}</dataVersion>
                            <productDataPath>${basedir}/src/test/resources/confluence-generated-test-resources.zip
                            </productDataPath>
                        </product>
                        <product>
                            <id>jira</id>
                            <version>${jira.version}</version>
                            <dataVersion>${jira.data.version}</dataVersion>
                            <productDataPath>${basedir}/src/test/resources/jira-generated-test-resources.zip
                            </productDataPath>
                        </product>
                        <product>
                            <id>fecru</id>
                            <version>${fecru.version}</version>
                            <dataVersion>${fecru.data.version}</dataVersion>
                            <!--productDataPath>${basedir}/src/test/resources/jira-generated-test-resources.zip</productDataPath-->
                        </product>
                        <product>
                            <id>bamboo</id>
                            <version>${bamboo.version}</version>
                            <dataVersion>${bamboo.data.version}</dataVersion>
                            <!--productDataPath>${basedir}/src/test/resources/jira-generated-test-resources.zip</productDataPath-->
                        </product>
                    </products>
                    <testGroups>
                        <testGroup>
                            <id>jira</id>
                            <productIds>
                                <productId>jira</productId>
                            </productIds>
                            <systemProperties>
                                <testedProductClass>com.atlassian.webdriver.jira.JiraTestedProduct</testedProductClass>
                            </systemProperties>
                        </testGroup>
                        <testGroup>
                            <id>refapp</id>
                            <productIds>
                                <productId>refapp</productId>
                            </productIds>
                        </testGroup>
                        <testGroup>
                            <id>confluence</id>
                            <productIds>
                                <productId>confluence</productId>
                            </productIds>
                            <systemProperties>
                                <testedProductClass>com.atlassian.webdriver.confluence.ConfluenceTestedProduct
                                </testedProductClass>
                            </systemProperties>
                        </testGroup>
                        <!-- TODO: implement TestedProduct<WebDriverTester> for FECRU -->
                        <!--<testGroup <id>fecru</id>
                            <productIds>
                                <productId>fecru</productId>
                            </productIds>
                            <systemProperties>
                                <testedProductClass>com.atlassian.webdriver.fecru.FecruTestedProduct
